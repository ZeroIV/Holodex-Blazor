@page "/video"
@using HoloDex_UI.Data

@if (video != null)
{
    <div class="embedPlayer">
        <iframe width="1280" height="720" src="https://www.youtube.com/embed/@video.VideoId?autoplay=0?playsinline=1"
            title="@video.Title" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen>
        </iframe>
    </div>
}

@code {
    [Parameter]
    public RenderFragment PlayerContent { get; set; }
    private Video? video;

    public void populateComponent(Video vid = null)
    {
        video = vid;
        this.StateHasChanged();
    }
}
